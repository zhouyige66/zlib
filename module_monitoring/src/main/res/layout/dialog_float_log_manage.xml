<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_8dp"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vApplyPermission"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_transparent_gray_8800">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="悬浮窗权限管理"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cbcaca" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vRestart"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_transparent_gray">

        <TextView
            android:id="@+id/tvRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关闭日志功能"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cbcaca" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vCleanData"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_transparent_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="清空数据"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cbcaca" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vExit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_transparent_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="退出"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cbcaca" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/selector_transparent_gray"
        android:gravity="center"
        android:text="取消"
        android:textSize="16dp" />
</LinearLayout>